{
  "extends": ["airbnb"],
  "env": {
    "node": true
  },
  "rules": {
    "no-console": "off",
    "comma-dangle": "off",
    "max-len": 0,
    "no-underscore-dangle": 0,
    "no-plusplus": 0,
    "array-callback-return": 0,
    "consistent-return": 0,
    "quote-props": 0,
    "no-else-return": ["error", {"allowElseIf": true}],
    "no-unneeded-ternary": ["error", { "defaultAssignment": true }],
    "no-loop-func": 0
  }
}
